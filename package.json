{
  "name": "allstars",
  "version": "1.0.0",
  "private": true,
  "description": "AllStars wedding quiz game platform monorepo",
  "scripts": {
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:e2e": "playwright test",
    "test:helpers": "vitest run tests/e2e/helpers.test.ts",
    "emulator": "firebase emulators:start --import=./emulator-data --export-on-exit"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^18.19.3",
    "firebase-admin": "^13.5.0",
    "firebase-tools": "^12.9.1",
    "vitest": "^4.0.6"
  },
  "packageManager": "pnpm@8.0.0"
}
