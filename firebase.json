{
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8081
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "apps/api-server/firestore.indexes.json"
  },
  "functions": {
    "source": "apps/api-server",
    "runtime": "nodejs18",
    "predeploy": ["pnpm --prefix apps/api-server run build"]
  }
}
