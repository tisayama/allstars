{
  "name": "@allstars/participant-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "AllStars Participant App - Guest quiz controller for mobile devices",
  "scripts": {
    "dev": "vite --host",
    "build": "timeout 300 tsc && timeout 300 vite build",
    "preview": "vite preview",
    "test": "timeout 120 vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "timeout 120 vitest run --coverage",
    "test:component": "vitest run --config vitest.config.ts",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "firebase": "^10.7.0",
    "socket.io-client": "^4.8.0",
    "@allstars/types": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.8",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@playwright/test": "^1.40.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16",
    "jsdom": "^23.0.1",
    "html5-qrcode": "^2.3.8",
    "qrcode.react": "^4.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
