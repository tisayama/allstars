# Firebase Project Config
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Firebase Emulator Settings (for local development)
VITE_USE_EMULATOR=true
VITE_EMULATOR_AUTH_URL=http://127.0.0.1:9099
VITE_EMULATOR_FIRESTORE_HOST=127.0.0.1
VITE_EMULATOR_FIRESTORE_PORT=8080
VITE_EMULATOR_FUNCTIONS_HOST=127.0.0.1
VITE_EMULATOR_FUNCTIONS_PORT=5001

# API Server Base URL
# Note: For Firebase Functions, include /api at the end (the function export name)
VITE_API_BASE_URL=http://127.0.0.1:5001/allstars-emulator/us-central1/api

# Error Monitoring (Sentry)
VITE_SENTRY_DSN=
