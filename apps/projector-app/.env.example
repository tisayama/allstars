# Firebase Configuration
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# API Configuration
# Note: For Firebase Functions, include /api at the end (the function export name)
VITE_API_BASE_URL=https://us-central1-your-project-id.cloudfunctions.net/api

# Socket Server Configuration
VITE_SOCKET_SERVER_URL=https://socket.yourdomain.com

# Projector Authentication
# Static API key for custom token generation endpoint
# Must match PROJECTOR_API_KEY in api-server .env
# Generate with: openssl rand -hex 32
VITE_PROJECTOR_API_KEY=your-secure-api-key-here-min-32-chars

# Audio Assets
VITE_AUDIO_ASSETS_BUCKET=gs://your-project.appspot.com

# Feature Flags
VITE_USE_EMULATORS=false
VITE_LOG_LEVEL=info
